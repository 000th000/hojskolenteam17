<style>
    .hidden-logo {
  opacity: 0;
  visibility: hidden;
}

.visible-logo {
  opacity: 1;
  visibility: visible;
}

.left-start {
  transform: translateX(-50%);
}

.left-original {
  transform: translateX(0);
}

.solid-bg {
  background-color: rgba(255, 156, 102, 1) ;
}

.transition-all {
  transition: all 0.3s ease-in-out;
}

</style>

<script>
  const header = document.getElementById('header');
  const logo = document.getElementById('logo');
  const leftNav = document.getElementById('left-nav');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) { // Adjust scroll threshold as needed
      header.classList.add('solid-bg');
      logo.classList.remove('hidden-logo');
      logo.classList.add('visible-logo');
      leftNav.classList.remove('left-start');
      leftNav.classList.add('left-original');
    } else {
      header.classList.remove('solid-bg');
      logo.classList.remove('visible-logo');
      logo.classList.add('hidden-logo');
      leftNav.classList.remove('left-original');
      leftNav.classList.add('left-start');
    }
  });
</script>
